{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "test"
  ]
}